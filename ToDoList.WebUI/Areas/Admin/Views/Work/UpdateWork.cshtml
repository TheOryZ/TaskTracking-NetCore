@model WorkUpdateDto
@{
    ViewData["Title"] = "UpdateWork";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="UpdateWork" asp-controller="Work" method="post" class="w-75 mx-auto p-3 ">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label> Name :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Description :</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label>Please select an urgency</label>
        <span class="text-danger" asp-validation-for="UrgencyId"></span>
        <select class="form-control" asp-for="UrgencyId" asp-items="ViewBag.Urgencies">
            <option value="-1" hidden>Choose</option>
        </select>
    </div>
    <button type="submit" class="btn btn-sm btn-outline-info"><i class="fas fa-pen-square"></i> Update Task</button>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
