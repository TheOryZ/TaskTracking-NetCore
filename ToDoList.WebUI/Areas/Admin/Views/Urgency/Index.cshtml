@model List<UrgencyListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@if (Model.Count > 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-outline-info my-2"><i class="fas fa-plus-square mr-2"></i> Add New Urgency</a>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>Description</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td><a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm"><i class="fas fa-pen-square"></i> Update</a></td>
            </tr>
        }
    </tbody>
</table>
}
else
{
<div class="text-center lead mt-4">
    <p>No urgency issues registered in the system found</p>
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-outline-info my-2"><i class="fas fa-plus-square mr-2"></i> Add New Urgency</a>
</div>
}

