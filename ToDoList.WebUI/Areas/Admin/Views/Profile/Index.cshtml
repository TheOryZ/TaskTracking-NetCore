@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>Holy shit!</strong> @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Your Current Picture</h5>
                    <img src="~/img/@Model.Picture" class="w-100" style="height:10rem!important; width:13rem!important;" alt="@Model.Name" />
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div id="Preview" style="display:none!important">
                    <h5 class="text-center">Picture You Chose</h5>
                    <img id="pictureReview" src="" class="w-100" style="height:10rem!important; width:13rem!important;" />
                </div>
            </div>
            <div class="col-md-12">
                <label>Select Picture</label>
                <input type="file" class="form-control-file" name="picture" id="picture" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-sm btn-outline-info"><i class="fas fa-pen-square mt-2"></i>Update Picture</button>
</form>


@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#picture").change(function (e) {
                $("#Preview").show();
                $("#pictureReview").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}

