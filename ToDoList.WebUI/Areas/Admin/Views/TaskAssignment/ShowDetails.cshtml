@model WorkAllListDto
@{
    ViewData["Title"] = "ShowDetails";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a asp-action="ExportExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info my-2"><i class="fas fa-file-excel mr-2"></i> Export to excel</a>
    <a asp-action="ExportPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-primary my-2"><i class="fas fa-file-pdf mr-2"></i> Export to pdf</a>
    <br />
    <table class="table table-hover table-sm mt-2 text-center table-bordered">
        <tr>
            <th colspan="2">Reports written by @Model.AppUser.Name @Model.AppUser.Surname for @Model.Name task</th>
        </tr>
        <tr>
            <th>Subject</th>
            <th>Detail</th>
        </tr>

        @foreach (var item in Model.Reports)
        {
            <tr>
                <td>@item.Subject</td>
                <td>@item.Description</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname is working on this Task. No report has been entered yet
    </div>
}
