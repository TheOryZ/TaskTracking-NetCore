@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form class="mt-5 w-50 mx-auto p-4 shadow" asp-action="Login" asp-controller="Home" method="Post">
    <div class="form-group">
        <label asp-for="UserName">User Name :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <a asp-action="Register" asp-controller="Home" class="btn btn-outline-warning btn-sm">Register</a>
    <input type="submit" class="btn btn-sm btn-outline-info" value="Login" />
</form>


